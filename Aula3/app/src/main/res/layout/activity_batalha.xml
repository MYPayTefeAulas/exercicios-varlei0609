<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RPG.BatalhaActivity">

    <TextView
        android:id="@+id/txtSaidaRPGB"
        android:layout_width="327dp"
        android:layout_height="76dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btAtacar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="#B17927"
        android:text="Atacar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="283dp"
        android:layout_height="54dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/btAtacar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btProximoTurno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#009688"
        android:text="Jogar próximo turno"
        app:layout_constraintEnd_toEndOf="@+id/btAtacar"
        app:layout_constraintStart_toStartOf="@+id/btAtacar"
        app:layout_constraintTop_toBottomOf="@+id/btAtacar" />

    <Button
        android:id="@+id/btHistorico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#8BC34A"
        android:text="Histórico"
        app:layout_constraintEnd_toEndOf="@+id/btProximoTurno"
        app:layout_constraintStart_toStartOf="@+id/btProximoTurno"
        app:layout_constraintTop_toBottomOf="@+id/btProximoTurno" />

    <ProgressBar
        android:id="@+id/barra1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="103dp"
        android:layout_height="25dp"
        android:layout_marginStart="84dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:progressTint="#C10F0F"
        app:layout_constraintBottom_toBottomOf="@+id/barra2"
        app:layout_constraintStart_toEndOf="@+id/barra2"
        app:layout_constraintTop_toTopOf="@+id/barra2"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/barra2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="99dp"
        android:layout_height="23dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="108dp"
        android:indeterminate="false"
        android:progressTint="#FD0303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAvisos"
        android:layout_width="308dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultado" />

</androidx.constraintlayout.widget.ConstraintLayout>